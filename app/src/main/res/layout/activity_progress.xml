<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Progress"
    android:gravity="center">

    <ImageView
        android:id="@+id/highScoreBubble"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        app:srcCompat="@drawable/progressbubbleblue" />

    <ImageView
        android:id="@+id/LessonBubble"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/progressbubblegrey" />

    <TextView
        android:id="@+id/lesson"
        android:layout_width="228dp"
        android:layout_height="191dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="175dp"
        android:text="2/7"
        android:textColor="#FCFCFC"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginLeft="170dp"

        android:layout_marginTop="470dp"
        android:layout_marginBottom="49dp"
        android:text="20%"
        android:textColor="#FCFCFC"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="620dp"
        android:layout_marginBottom="49dp"
        android:text="Quiz High Score"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Quiz High Score"
        android:layout_marginLeft="120dp" />

    <TextView
        android:id="@+id/OSILayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="49dp"
        android:text="OSI Layers"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="OSI Layers" />

</RelativeLayout>