<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:windowBackground">@drawable/flashcard_dialog_background</item>
    </style>

    <style name="toolbarnavigation" parent="AppTheme">
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:listDivider">@color/lightGrey</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbarback" parent="AppTheme">
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>
